<!DOCTYPE html>
<html lang="zh-cn">
<head>
	<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="color-scheme" content="light dark"/>
    <title>@ViewData["Title"] - 秦文轩的个人空间</title>
    <meta name="description" content="@ViewData["Description"]" />
    <meta name="keywords" content="@ViewData["Keywords"]" />
    <meta property="og:title" content="@ViewData["Title"] - 秦文轩的个人空间" />
    <meta property="og:description" content="@ViewData["Description"]" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header>
		@*<nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">*@
		<nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container d-flex justify-content-between align-items-center">
				<a class="navbar-brand" asp-area="" asp-page="/Index">秦文轩的个人空间</a>
				<!-- Dark/Light Mode Toggle Button -->
				<button class="theme-toggle" onclick="toggleTheme()" aria-label="切换深浅色主题">
					<span id="theme-icon">🌙</span>
				</button>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2019-@DateTime.Now.Year 秦文轩 (vxchin) <a href="http://beian.miit.gov.cn/" class="text-decoration-none float-end" target="_blank">陕ICP备15002192号</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>